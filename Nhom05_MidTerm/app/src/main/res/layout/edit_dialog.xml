<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <ImageView
        android:id="@+id/imvNewThumb"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/btnEditThayAnh"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thay Ảnh"
        android:textColor="#000000"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:backgroundTint="#FFB73B"/>

    <EditText
        android:id="@+id/edtEditTenSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên Sản Phẩm"
        android:textSize="24sp"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/edtEditHSX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hãng Sản Xuất"
        android:textSize="16sp"/>
    <EditText
        android:id="@+id/edtEditGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF0000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnEditSua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/btnEditHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:backgroundTint="#86FF0000"/>
    </LinearLayout>
</LinearLayout>